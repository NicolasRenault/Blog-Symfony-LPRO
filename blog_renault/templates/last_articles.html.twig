{% block menu_gauche %}
<div class="wrapper">
    {% if categories %}
        <ul class="list-group">
            {% for category in categories %}
                <a href="{{path( 'action_category', {'categoryId' : category.id} ) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    {{category.name|trans}}
                    <span class="badge badge-dark badge-pill">{{category.nbArticles}}</span>
                </a>
            {% endfor %}
        </ul>
        <hr>
    {% else %}
        <small>{{ 'Pas de catégories disponibles'|trans }}</small>
        <hr>
    {% endif %}
    {% if articles %}
    <div class="list-group list-group-flush">
        {% for article in articles %}
            <a href="{{path( 'action_view', {'articleId' : article.id} ) }}" class="list-group-item text-dark"><span> <i class="far fa-newspaper"></i>   {{ article.title }}</span> <span class="float-right">{{ article.createdat|date('d/m/Y'|trans) }}</span></a>
        {% endfor %}
        <hr>
    </div>
    {% else %}
        <small>{{ "Pas d'articles récent"|trans }}</small>
        <hr>
    {% endif %}
    {% if  app.session.flashBag.has('info')%}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <span style="font-size:calc(7px + 2vw)">{{'Messages flash'|trans }}</span>
        {% for msg in app.session.flashBag.get('info') %}
            <p>{{ msg }}</p>
        {% endfor %}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endif %}
</div>
{% endblock %}