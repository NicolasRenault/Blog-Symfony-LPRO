{% extends 'blog.html.twig' %}

{% block h1_content %}<h1>{{ "Modification d'article"|trans }}</h1>{% endblock %}
{% block blog_content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.author) }}
    {{ form_row(form.nb_views) }}
    <div>
        {{ form_label(form.published) }}
        {{ form_errors(form.published) }}
        {{ form_widget(form.published) }}
    </div>
    {{ form_row(form.send) }}
    {{ form_end(form) }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){
            $('#article_send').removeClass("btn-default").addClass("btn-elegant");
        })
    </script>
{% endblock %}